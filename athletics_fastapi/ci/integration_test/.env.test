DATABASE_PORT=5432
DATABASE_NAME=athletics_test
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# CORS Configuration
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://localhost:5173"]
